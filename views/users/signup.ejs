<% layout('/layouts/boilerplate') -%>
<h3 class="col-6 offset-3 mt-3">SignUp on Wanderlust</h3>

<% if (error) { %>
<p style="color: red"><%= error %></p>
<% } %>

<div class="row mt-3">
  <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" type="text" class="form-control" required />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter username.</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input name="email" type="email" class="form-control" required />
        <div class="invalid-feedback">Please enter email.</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" type="password" class="form-control" required />
        <div class="invalid-feedback">Please enter password.</div>
      </div>

      <button class="btn btn-success mt-4 d-block mx-auto">
        <i class="fa-solid fa-user-plus"></i>&nbsp;&nbsp;&nbsp;Sign Up
      </button>
    </form>

      <div class="text-center mt-3">
      <a href="/auth/google" class="btn btn-danger">
        <i class="fa-brands fa-google me-2"></i>Signup with Google
      </a>
    </div>

    <div class="text-center mt-3 me-2">
      <span class="text-dark">Already have an account? </span>
      <a href="/login" class="text-primary fw-semibold text-decoration-none">
        Login
      </a>
    </div>
  </div>
</div>
