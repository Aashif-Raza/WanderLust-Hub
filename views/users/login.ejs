<% layout('/layouts/boilerplate') -%>
<h3 class="col-6 offset-3 mt-3">Login</h3>

<div class="row mt-3">
  <div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" type="text" class="form-control" required />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" type="password" class="form-control" required />
      </div>

      <button class="btn btn-success offset-5 mt-3">
        <i class="fa-solid fa-arrow-right-to-bracket"></i
        >&nbsp;&nbsp;&nbsp;Login
      </button>
    </form>

    <div class="text-center mt-3">
      <a href="/auth/google" class="btn btn-danger">
        <i class="fa-brands fa-google me-2"></i>Login with Google
      </a>
    </div>

    <div style="text-align: center; margin-top: 20px">
      <span style="color: black">Don't have an account? </span>
      <a
        href="/signup"
        style="color: blue; text-decoration: none; font-weight: 500"
        >Signup</a
      >
    </div>
  </div>
</div>
